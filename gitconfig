[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
  co = checkout
  d = diff
  st = status -s
  pl = pull
  ps = push
  br = branch
  pb = "!git push origin \"$(git rev-parse --abbrev-ref HEAD)\""
  delete-merged-branches = "!f() { git checkout --quiet master && git branch --merged | grep --invert-match '\\*' | xargs -n 1 git branch --delete; git checkout --quiet @{-1}; }; f"
  up = !git pull --rebase --prune $@ && git submodule update --init --recursive
  cob = checkout -b
  amend = commit -a --amend
  rubocop = "!git diff master --cached --name-only | xargs -0 rubocop-select | xargs rubocop"
[user]
	name = Alexander Kledal
	email = alex.kledal@gmail.com
[credential]
  helper = cache --timeout=2628000
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = vim
[branch]
  autosetuprebase = always
[push]
  default = current
